syntax on
filetype on
filetype plugin on
filetype indent on

autocmd Filetype py,python set tabstop=4 shiftwidth=4 softtabstop=4 expandtab
autocmd Filetype yml,yaml set tabstop=2 shiftwidth=2 softtabstop=2 expandtab
autocmd FileType make set noexpandtab shiftwidth=8 softtabstop=0

set mouse=a
map <ScrollWheelDown> j
map <ScrollWheelUp> k
